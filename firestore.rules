rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    // Users: a user can read their own profile; update limited fields
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false;
    }

    // Rides: participants only
    match /rides/{rideId} {
      allow create: if isSignedIn() && request.resource.data.riderId == request.auth.uid;
      allow read: if isSignedIn() && ((request.auth.uid in resource.data.participants) || resource.data.status == 'requested');
      allow update: if isSignedIn() && (request.auth.uid in resource.data.participants);
      allow delete: if false;

      // Live locations per ride, visible to ride participants only
      match /locations/{userId} {
        allow read, write: if isSignedIn() && (request.auth.uid in get(/databases/$(database)/documents/rides/$(rideId)).data.participants);
      }
    }

    // Messages: sender or receiver only
    match /messages/{messageId} {
      allow create: if isSignedIn() &&
        (request.auth.uid in request.resource.data.participants);
      allow read: if isSignedIn() && (request.auth.uid in resource.data.participants);
      allow update, delete: if false;
    }

    // Payments: owner only
    match /payments/{paymentId} {
      allow read, create: if isSignedIn() && request.auth.uid == resource.data.userId;
      allow update, delete: if false;
    }
  }
}


